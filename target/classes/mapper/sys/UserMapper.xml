<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.qx.sys.mapper.SysUserMapper">

    <!-- 条件查询 -->
    <select id="findByPage" resultType="cn.qx.sys.entity.User">
        SELECT * FROM sys_user
        WHERE 1=1
        <if test="username != null">
        AND username LIKE CONCAT('%', #{username}, '%')
        </if>
    </select>

    <!-- 根据ID查询 -->
    <select id="findById"  resultType="cn.qx.sys.entity.User">
        SELECT * FROM sys_user WHERE id = #{id}
    </select>

    <!-- 保存 -->
    <insert id="save" parameterType="cn.qx.sys.entity.User">
        INSERT INTO
        sys_user(
          username,
          nickname,
          password,
          salt,
          email,
          avatar,
          valid,
          modified_user,
          modified_time,
          mobile

        )
        VALUES(
          #{username},
          #{nickname},
          #{password},
          #{salt},
          #{email},
          #{avatar},
          #{valid},
          #{modifiedUser},
          #{modifiedTime},
          #{mobile}
        )
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="cn.qx.sys.entity.User">
        UPDATE ignore sys_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="salt != null and salt != ''">
                salt = #{salt},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar}
            </if>
            <if test="valid != null and valid != ''">
                valid = #{valid}
            </if>
            <if test="modifiedUser != null and modifiedUser != ''">
                modified_user = #{modifiedUser}
            </if>
            <if test="modifiedTime != null and modifiedTime != ''">
                modified_time = #{modifiedTime}
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile}
            </if>
        </set>
        WHERE id = #{id}
    </update>
    <update id="updateObject">
        update sys_users
         <set>
             <if test="username!=null and username!=''">
               username=#{username},
             </if>
             <if test="email!=null and email!=''">
                  email=#{email},
             </if>
             <if test="mobile!=null and mobile!=''">
                mobile=#{mobile},
             </if>
             
             <if test="modifiedUser!=null and modifiedUser!=''">
                modified_user=#{modifiedUser},
             </if>
             modified_time=now()
          </set>
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id="delete">
        DELETE FROM sys_user WHERE id = #{id}
    </delete>

    <!-- 根据用户名查询 -->
    <select id="findByName" resultType="cn.qx.sys.entity.User">
        SELECT * FROM sys_user WHERE username = #{username}
    </select>
    
    <!-- 禁用或启用用户信息 -->
   <update id="validById">
        update sys_user
        set valid=#{valid},
            modified_user=#{modifiedUser},
            modified_time=now()
        where id=#{id}
   </update>
   
   <select id="findObjectByColumn"
           resultType="int">
           select count(*)
           from sys_user
           where ${columnName}=#{columnValue}
   </select>
</mapper>
